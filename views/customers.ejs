<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Customer Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Poppins', sans-serif;
    }

    .btn-brown {
      background-color: #6F4E37;
      color: white;
      border: none;
      transition: all 0.3s ease;
    }

    .btn-brown:hover {
      background-color: #5C3317;
      transform: translateY(-2px);
    }

    .btn-brown:focus,
    .btn-brown:active {
      box-shadow: 0 0 0 0.25rem rgba(111, 78, 55, 0.4);
    }

    .card {
      border: none;
      border-radius: 15px;
      transition: transform 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
    }

    .page-header {
      background: linear-gradient(45deg, #6F4E37, #A0522D);
      color: white;
      padding: 2rem;
      border-radius: 15px;
      margin-bottom: 2rem;
    }

    .table thead {
      background-color: #6F4E37;
      color: white;
    }

    .btn-action {
      padding: 0.5rem;
      border-radius: 50%;
      width: 38px;
      height: 38px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      transition: 0.3s ease;
    }

    .modal-content {
      border-radius: 15px;
    }

    .input-group-text {
      background-color: #6F4E37;
      color: white;
      border: none;
    }

    .form-control:focus {
      border-color: #6F4E37;
      box-shadow: 0 0 0 0.25rem rgba(111, 78, 55, 0.25);
    }

    .table td, .table th {
      vertical-align: middle;
    }
  </style>
</head>
<body>

  <div class="container py-5">
    <!-- Header -->
    <div class="page-header text-center mb-5">
      <h1 class="display-5 fw-bold">Customer Management</h1>
      <p class="lead mb-0">Manage your valuable customers with ease</p>
    </div>

    <!-- Main Row: Table + Form Side by Side -->
    <div class="row justify-content-center g-4">
      <!-- Customer Table -->
      <div class="col-lg-7">
        <div class="card shadow">
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="text-center">
                  <tr>
                    <th class="py-3">ID</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody id="customerTable">
                  <% if (customers.length > 0) { %>
                    <% customers.forEach(customer => { %>
                      <tr>
                        <td class="text-center"><%= customer.id %></td>
                        <td><%= customer.name %></td>
                        <td><%= customer.phone %></td>
                        <td><%= customer.email %></td>
                        <td class="text-center">
                          <!-- Edit Button -->
                          <button class="btn-action btn btn-warning" data-bs-toggle="modal" data-bs-target="#updateModal<%= customer.id %>">
                            <i class="bi bi-pencil-square"></i>
                          </button>

                          <!-- Delete Form -->
                          <form action="/app/customers/delete/<%= customer.id %>" method="post" class="d-inline">
                            <button type="submit" class="btn-action btn btn-danger" onclick="return confirm('Are you sure you want to delete this customer?')">
                              <i class="bi bi-trash3"></i>
                            </button>
                          </form>
                        </td>
                      </tr>

                      <!-- Modal Update -->
                      <div class="modal fade" id="updateModal<%= customer.id %>" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                          <div class="modal-content">
                            <div class="modal-header bg-brown text-white">
                              <h5 class="modal-title"><i class="bi bi-pencil-square me-2"></i>Edit Customer</h5>
                              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body p-4">
                              <form action="/app/customers" method="post">
                                <input type="hidden" name="id" value="<%= customer.id %>">
                                <div class="mb-3">
                                  <label class="form-label">Name <span class="text-danger">*</span></label>
                                  <input type="text" class="form-control" name="name" value="<%= customer.name %>" required>
                                </div>
                                <div class="mb-3">
                                  <label class="form-label">Phone <span class="text-danger">*</span></label>
                                  <input type="text" class="form-control" name="phone" value="<%= customer.phone %>" required>
                                </div>
                                <div class="mb-3">
                                  <label class="form-label">Email <span class="text-danger">*</span></label>
                                  <input type="email" class="form-control" name="email" value="<%= customer.email %>" required>
                                </div>
                                <div class="text-end">
                                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                  <button type="submit" class="btn btn-brown ms-2">Update</button>
                                </div>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% }) %>
                  <% } else { %>
                    <tr class="text-center text-muted">
                      <td colspan="5" class="py-4">
                        <i class="bi bi-inbox display-4 d-block mb-2"></i>
                        No customers found.
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- Create Form -->
      <div class="col-lg-5">
        <div class="card shadow hover-effect">
          <div class="card-header bg-brown text-white py-3 rounded-top">
            <h4 class="mb-0 d-flex align-items-center">
              <i class="bi bi-person-plus-fill me-2"></i>
              Add New Customer
            </h4>
          </div>
          <div class="card-body p-4">
            <form action="/app/customers/" method="post">
              <input type="hidden" name="id" value="" />
              <div class="mb-3">
                <label for="name" class="form-label fw-semibold">
                  <i class="bi bi-person me-2"></i>Name <span class="text-danger">*</span>
                </label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                  <input type="text" class="form-control form-control-lg" id="name" name="name" required 
                         placeholder="Enter customer name" />
                </div>
              </div>
              <div class="mb-3">
                <label for="phone" class="form-label fw-semibold">
                  <i class="bi bi-telephone me-2"></i>Phone <span class="text-danger">*</span>
                </label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-telephone-fill"></i></span>
                  <input type="text" class="form-control form-control-lg" id="phone" name="phone" required 
                         placeholder="Enter phone number" />
                </div>
              </div>
              <div class="mb-4">
                <label for="email" class="form-label fw-semibold">
                  <i class="bi bi-envelope me-2"></i>Email <span class="text-danger">*</span>
                </label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                  <input type="email" class="form-control form-control-lg" id="email" name="email" required 
                         placeholder="Enter email address" />
                </div>
              </div>
              <button type="submit" class="btn btn-brown btn-lg w-100 d-flex align-items-center justify-content-center">
                <i class="bi bi-plus-circle me-2"></i>Create Customer
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
