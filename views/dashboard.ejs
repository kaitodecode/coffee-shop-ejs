<main class="content">
  <meta charset="UTF-8">
  <title>Dashboard - Invoices</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f9f6f2;
    }

    .sidebar {
      background-color: #a0522d;
      color: white;
      min-height: 100vh;
    }

    .sidebar a {
      color: white;
      text-decoration: none;
    }

    .sidebar a.active,
    .sidebar a:hover {
      background-color: #8b4513;
      color: white;
      border-radius: 0.375rem;
    }

    .card-status {
      border-left: 6px solid #8b4513;
      padding-left: 1rem;
      color: #4e342e;
    }

    .status-paid {
      background-color: #d2b48c; /* coklat muda */
    }

    .status-unpaid {
      background-color: #deb887; /* coklat susu */
    }

    .status-overdue {
      background-color: #a0522d; /* coklat tua */
      color: white;
    }

    .status-draft {
      background-color: #cd853f; /* peru/coklat abu */
    }

    #salesChart {
      width: 100%;
      height: 100%;
      max-height: 500px;
    }
  </style>

  <div class="container-fluid px-0 mx-0">
    <div class="row g-0">
      <!-- Sidebar -->
      <!-- (Sidebar content bisa ditambahkan di sini jika perlu) -->

      <!-- Main Content -->
      <main class="col px-0 mx-0">
        <!-- Status Cards -->
        <div class="row g-3 mb-4 px-3">
          <div class="col-md-3">
            <div class="card card-status status-paid p-3">
              <h6>Total Penjualan</h6>
              <p class="mb-0">Pies: 120</p>
              <small>Value: Rp.12000</small>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card card-status status-unpaid p-3">
              <h6>Total Transaksi</h6>
              <p class="mb-0">Pies: 100</p>
              <small>Value: Rp.10000</small>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card card-status status-overdue p-3">
              <h6>Total Quantity Terjual</h6>
              <p class="mb-0">Pies: 160</p>
              <small>Value: Rp.16500</small>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card card-status status-draft p-3">
              <h6>Rata-Rata Terjual</h6>
              <p class="mb-0">Pies: 130</p>
              <small>Value: Rp.13000</small>
            </div>
          </div>
        </div>

        <!-- Chart Section -->
        <div class="card mb-5 mx-3">
          <div class="card-body">
            <h5 class="card-title">Grafik Penjualan per Hari</h5>
            <canvas id="salesChart" height="400"></canvas>
          </div>
        </div>

        <!-- Pagination -->
        <nav>
          <ul class="pagination justify-content-end"></ul>
        </nav>
      </main>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const ctx = document.getElementById('salesChart').getContext('2d');
    const salesChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Senin', 'Selasa', 'Rabu', 'Kamis', 'Jumat', 'Sabtu', 'Minggu'],
        datasets: [{
          label: 'Penjualan (Rp)',
          data: [12000, 10000, 16500, 13000, 11000, 9000, 14000],
          backgroundColor: '#a0522d',
          borderRadius: 5,
          barThickness: 50
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: false
          },
          tooltip: {
            callbacks: {
              label: (context) => `Rp ${context.parsed.y}`
            }
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            ticks: {
              callback: value => 'Rp' + value
            }
          }
        }
      }
    });
  </script>
</main>
