<div class="container py-5">
  <div class="mb-4 text-center">
    <h1 class="display-5 fw-semibold text-dark"><i class="bi bi-tags-fill me-2"></i>Manage Categories</h1>
    <p class="text-muted">Organize your product categories to enhance user experience.</p>
  </div>

  <div class="row g-4">
    <!-- Form: Create Category -->
    <div class="col-lg-5">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-coffee text-white">
          <h5 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Create New Category</h5>
        </div>
        <div class="card-body">
          <form action="/app/categories" method="post">
            <div class="mb-3 position-relative">
              <label for="name" class="form-label fw-bold">Name</label>
              <input type="text" class="form-control ps-4" id="name" name="name" placeholder="Category name" required>
              <i class="bi bi-tag form-icon"></i>
            </div>
            <div class="mb-3 position-relative">
              <label for="description" class="form-label fw-bold">Description</label>
              <textarea class="form-control ps-4" id="description" name="description" rows="3" placeholder="Brief description" required></textarea>
              <i class="bi bi-card-text form-icon"></i>
            </div>
            <button type="submit" class="btn btn-coffee w-100 text-white">
              <i class="bi bi-save2 me-1"></i> Save Category
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Table: Existing Categories -->
    <div class="col-lg-7">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-light">
          <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>All Categories</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead class="table-light">
                <tr>
                  <th><i class="bi bi-tag"></i> Name</th>
                  <th><i class="bi bi-card-text"></i> Description</th>
                  <th class="text-center"><i class="bi bi-gear"></i> Actions</th>
                </tr>
              </thead>
              <tbody>
                <% categories.forEach(category => { %>
                  <tr>
                    <td><%= category.name %></td>
                    <td><%= category.description %></td>
                    <td class="text-center">
                      <!-- Update Button -->
                      <button type="button" class="btn btn-sm btn-warning me-2" data-bs-toggle="modal" data-bs-target="#updateModal<%= category.id %>">
                        <i class="bi bi-pencil-square"></i>
                      </button>
                      <!-- Delete -->
                      <form action="app/categories/delete/<%= category.id %>" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">
                          <i class="bi bi-trash3"></i>
                        </button>
                      </form>

                      <!-- Modal Update -->
                      <div class="modal fade" id="updateModal<%= category.id %>" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                          <div class="modal-content">
                            <div class="modal-header bg-light">
                              <h5 class="modal-title"><i class="bi bi-pencil-square me-1"></i>Update Category</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                              <form action="/app/categories" method="post">
                                <input type="hidden" name="id" value="<%= category.id %>">
                                <div class="mb-3">
                                  <label for="updateName<%= category.id %>" class="form-label">Name</label>
                                  <input type="text" class="form-control" id="updateName<%= category.id %>" name="name" value="<%= category.name %>" required>
                                </div>
                                <div class="mb-3">
                                  <label for="updateDescription<%= category.id %>" class="form-label">Description</label>
                                  <textarea class="form-control" id="updateDescription<%= category.id %>" name="description" rows="3" required><%= category.description %></textarea>
                                </div>
                                <div class="text-end">
                                  <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Cancel</button>
                                  <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Custom Styles -->
<style>
  .btn-coffee {
    background-color: #6f4e37;
    border: none;
  }
  .btn-coffee:hover {
    background-color: #563827;
  }
  .bg-coffee {
    background-color: #6f4e37 !important;
  }
  .form-icon {
    position: absolute;
    top: 50%;
    left: 0.9rem;
    transform: translateY(-50%);
    color: #6f4e37;
  }
  .form-control.ps-4 {
    padding-left: 2.5rem !important;
  }
</style>
