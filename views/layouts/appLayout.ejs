<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard - Admin Kopi Kita</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    html, body {
      height: 100%;
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
    }

    .wrapper {
      display: flex;
      height: 100vh;
      overflow: hidden;
    }

    .sidebar {
      width: 250px;
      background-color: #4b3621; /* Coklat kopi gelap */
      color: white;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .sidebar .nav-links {
      padding-top: 1rem;
      flex-grow: 1;
    }

    .sidebar a {
      color: #e0dcd3;
      text-decoration: none;
      padding: 0.75rem 1.5rem;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      transition: all 0.3s ease;
      font-size: 0.95rem;
    }

    .sidebar a:hover {
      background-color: #6f4e37;
      color: #fff;
    }

    .sidebar a.active {
      background-color: #6f4e37;
      border-left: 4px solid #fff;
      font-weight: bold;
      color: #fff;
    }

    .sidebar a.active i {
      color: #ffffff;
    }

    .sidebar h5 {
      font-weight: 600;
      color: #f8f9fa;
    }

    .logout-form {
      padding: 1rem 1.5rem;
    }

    .content {
      flex-grow: 1;
      overflow-y: auto;
      padding: 2rem;
      background-color: #f8f9fa;
    }

    @media (max-width: 768px) {
      .sidebar {
        position: fixed;
        z-index: 1000;
        left: -250px;
        height: 100vh;
        transition: left 0.3s ease;
      }

      .sidebar.show {
        left: 0;
      }

      .content {
        padding: 1rem;
      }
    }
  </style>
</head>
<body>

  <div class="wrapper">
    <!-- Sidebar -->
    <nav class="sidebar">
      <div class="nav-links">
        <h5 class="text-center mt-3"><i class="bi bi-cup-hot-fill me-1"></i> Coffee Panel</h5>
        <hr class="text-white mx-3">
        <a href="/app/dashboard" class="<%= path && path === '/app/dashboard' ? 'active' : '' %>">
          <i class="bi bi-speedometer2"></i> Dashboard
        </a>
        <a href="/app/categories" class="<%= path && path === '/app/categories' ? 'active' : '' %>">
          <i class="bi bi-list-task"></i> Categories
        </a>
        <a href="/app/orders" class="<%= path && path === '/app/orders' ? 'active' : '' %>">
          <i class="bi bi-bag-check"></i> Orders
        </a>
        <a href="/app/products" class="<%= path && path === '/app/products' ? 'active' : '' %>">
          <i class="bi bi-box-seam"></i> Products
        </a>
      </div>
      <div class="logout-form">
        <form action="/logout" method="POST" class="mb-0">
          <button class="btn btn-sm btn-light w-100"><i class="bi bi-box-arrow-right"></i> Logout</button>
        </form>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="content">
      <%- body %>
    </main>
  </div>

  <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
